@model IEnumerable<WebBanHang.Models.ProductModel>
@foreach (var item in Model)
{
    var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
    <div class="item">
        <div class="products best-product">
            <div class="product">
                <div class="product-micro">
                    <div class="row product-micro-row">
                        <div class="col col-xs-5">
                            <div class="product-image">
                                <div class="image"> <a href="#"> <img src=@item.Image alt=""> </a> </div>
                                <!-- /.image -->

                            </div>
                            <!-- /.product-image -->
                        </div>
                        <!-- /.col -->
                        <div class="col2 col-xs-7">
                            <div class="product-info">
                                <h3 class="name"><a href="#">@item.Name</a></h3>
                                <div class="rating rateit-small"></div>
                                <div class="product-price">
                                    @if (item.Price.HasValue)
                                    {
                                        if (item.Sale.HasValue)
                                        {
                                            <span class="price">@((item.Price - (item.Price * item.Sale / 100)).Value.ToString("N0") + "VND")</span>
                                                <span class="price-before-discount">@(item.Price.Value.ToString("N0") + "VND")</span>
                                        }
                                        else
                                        {
                                            <span class="price"> @(item.Price.Value.ToString("N0") + "VND") </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="price">Liên Hệ</span>
                                    }
                                </div>

                                <!-- /.product-price -->

                            </div>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.product-micro-row -->
                </div>
                <!-- /.product-micro -->

            </div>
        </div>
    </div>
}


