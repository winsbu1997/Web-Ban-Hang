@model IEnumerable<WebBanHang.Models.ProductModel>

<div class="tab-content outer-top-xs">
    <div class="tab-pane in active" id="all">
        <div class="product-slider">
            <div class="owl-carousel home-owl-carousel custom-carousel owl-theme" data-item="3">
                @foreach (var item in Model)
                {
                    var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ID;
                    <div class="item item-carousel">
                        <div class="products">
                            <div class="product">
                                <div class="product-image">
                                    <div class="image"> <a href="@url"><img src=@item.Image alt=""></a> </div>
                                    <!-- /.image -->

                                    <div class="tag new"><span>new</span></div>
                                    @if (item.Sale.HasValue)
                                    {
                                        <div class="tag sale"><span>sale</span></div>
                                    }                                       
                                </div>
                                <!-- /.product-image -->

                                <div class="product-info text-left">
                                    <h3 class="name"><a href="@url">@item.Name</a></h3>
                                    <div class="rating rateit-small"></div>
                                    <div class="description">@(item.Quantity.Value > 3 ? "Còn Hàng" : "Hết Hàng")</div>
                                    <div class="product-price"> 
                                        @if (item.Price.HasValue)
                                        {
                                            if (item.Sale.HasValue)
                                            {
                                                <span class="price">@((item.Price - (item.Price * item.Sale /100)).Value.ToString("N0") + "VND")</span>
                                                <span class="price-before-discount">@(item.Price.Value.ToString("N0") + "VND")</span>
                                            }
                                            else
                                            {
                                                <span class="price"> @(item.Price.Value.ToString("N0") + "VND") </span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="price" >Liên Hệ</span>
                                        }
                                    </div>
                                    <!-- /.product-price -->

                                </div>
                                <!-- /.product-info -->
                                <div class="cart clearfix animate-effect">
                                    <div class="action">
                                        <ul class="list-unstyled">
                                            <li class="add-cart-button btn-group">
                                                <button data-toggle="tooltip" class="btn btn-primary icon" type="button" title="Add Cart" onclick="toro(@item.ID)"> <i class="fa fa-shopping-cart"></i> </button>
                                                <button class="btn btn-primary cart-btn" type="button">Add to cart</button>
                                            </li>
                                            @*<li class="lnk wishlist"> <a data-toggle="tooltip" class="add-to-cart" href="@url" title="Wishlist"> <i class="icon fa fa-heart"></i> </a> </li>
                                                <li class="lnk"> <a data-toggle="tooltip" class="add-to-cart" href="@url" title="Compare"> <i class="fa fa-signal" aria-hidden="true"></i> </a> </li>*@
                                        </ul>
                                    </div>
                                    <!-- /.action -->
                                </div>
                                <!-- /.cart -->
                            </div>
                            <!-- /.product -->

                        </div>
                        <!-- /.products -->
                    </div>
                }
                <!-- /.item -->
                @*<div class="owl-controls clickable"><div class="owl-buttons"><div class="owl-prev"></div><div class="owl-next"></div></div></div>*@

            </div>
            <!-- /.home-owl-carousel -->
        </div>
        <!-- /.product-slider -->
    </div>
</div>



